<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gotochat_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F4F6F6"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/prof">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/nickname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/profile_imageview"
        android:layout_toRightOf="@+id/profile_imageview"
        android:text="Username"
        android:textColor="@color/backg"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_textview"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/profile_imageview"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:textColor="#40E413"></TextView>

    <Button
        android:id="@+id/button"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/profile_imageview"
        android:backgroud="@color/backg"
        android:text="Go"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/backg"></Button>

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="50dp"
        android:text="time"/>
</RelativeLayout>